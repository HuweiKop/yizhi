	<bean id="jsonHttpMessageConverter"
		class="com.ideabinder.yizhi.base.api.util.converter.IdbMappingJackson2HttpMessageConverter">
		<property name="supportedMediaTypes">
			<list>
				<value>application/json;charset=UTF-8</value>
			</list>
		</property>
	</bean>

